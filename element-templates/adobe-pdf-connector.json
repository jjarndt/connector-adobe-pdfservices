    "label" : "Destination Information"
  }, {
    "id" : "operation",
    "label" : "Operation Details"
  }, {
    "id" : "output",
    "label" : "Output mapping"
  }, {
    "id" : "error",
    "label" : "Error handling"
  }, {
    "id" : "retries",
    "label" : "Retries"
  } ],
