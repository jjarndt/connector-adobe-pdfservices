    "binding" : {
      "name" : "requestDetails.sourcePath",
      "type" : "zeebe:input"
    },
    "type" : "String"
  }, {
    "id" : "requestDetails.destinationType",
    "label" : "Destination Type",
    "description" : "Type of the destination for the PDF",
    "optional" : false,
    "group" : "destination",
    "binding" : {
      "name" : "requestDetails.destinationType",
      "type" : "zeebe:input"
    },
    "type" : "Dropdown",
    "choices" : [ {
      "name" : "LOCAL_FILE",
      "value" : "LOCAL_FILE"
