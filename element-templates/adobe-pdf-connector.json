      "binding": {
        "name": "requestDetails.options",
        "type": "zeebe:input"
      },
      "condition": {
        "property": "requestDetails.operationType",
        "equals": "OCR"
      }
    },
    {
    "id" : "resultVariable",
    "label" : "Result variable",
    "description" : "Name of variable to store the response in",
